<div class="job_card">
  <h1><%= @job.title %></h1>
  <p><%= @job.created_at.strftime("%d/%m/%y") %></p>
  <p><%= @job.contract_type %></p>
  <p><%= @job.company_name %></p>
  <p><%= @job.location %></p>
  <% if @job.company_url %>
  <p><%= @job.company_url %></p>
  <% end %>
  <hr/>
  <%= raw BlueCloth.new(@job.description).to_html %>
  <div class="apply">
    Pour candidater : <%= @job.company_email %>
  </div>
</div>